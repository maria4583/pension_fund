{% extends 'layouts/auth.twig' %}

{% block content %}
  <div>
    <form action="/auth/login" method="post" class="text-center">
      <h4 class="mb-4">Войти в личный кабинет</h4>
      <div class="mb-2">
        <input type="text" name="login" class="form-control" placeholder="E-mail или номер телефона" required>
      </div>
      <div class="mb-4">
        <input type="password" name="password" class="form-control" placeholder="Пароль" required>
      </div>
      <button type="submit" class="w-100 btn btn-primary">Войти</button>
    </form>

    <div class="mt-3">
      Нет аккаунта? <a href="/auth/register">Зарегистрируйтесь</a>
    </div>
  </div>
{% endblock %}
{% extends 'layouts/auth.twig' %}

{% block content %}
  <div>
    <form action="/auth/register" method="post" class="text-center">
      <h4 class="mb-4">Зарегистрироваться</h4>
      <div class="mb-2">
        <input type="text" name="name" class="form-control" placeholder="Имя" required>
      </div>
      <div class="mb-2">
        <input type="text" name="surname" class="form-control" placeholder="Фамилия" required>
      </div>
      <div class="mb-3">
        <input type="text" name="middle_name" class="form-control" placeholder="Отчество" required>
      </div>
      <div class="mb-2">
        <input type="email" name="email" class="form-control" placeholder="E-mail">
      </div>
      <div class="mb-3">
        <input type="tel" name="phone" class="form-control" placeholder="Номер телефона" required>
      </div>
      <div class="mb-2">
        <input type="password" name="password" class="form-control" placeholder="Пароль" required>
      </div>
      <div class="mb-4">
        <input type="password" name="confirm_password" class="form-control" placeholder="Подтвердите пароль" required>
      </div>
      <button type="submit" class="w-100 btn btn-primary">Вперёд</button>
    </form>

    <div class="mt-3">
      Есть аккаунт? <a href="/auth/login">Авторизируйтесь</a>
    </div>
  </div>
{% endblock %}